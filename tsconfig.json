/**
 * TypeScript Configuration
 * 
 * Configures the TypeScript compiler for the Maptivity project.
 * - target: JavaScript version to compile to (ES2022)
 * - jsx: How to handle JSX syntax (react-jsx)
 * - strict: Enable strict type checking for type safety
 * - moduleResolution: How to resolve module imports
 * 
 * This file controls how TypeScript compiles .ts and .tsx files into JavaScript.
 */

{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "google.maps"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}